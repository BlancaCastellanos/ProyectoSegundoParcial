<Window x:Class="ProyectoSegundoParcial.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoSegundoParcial"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="920">

    <Grid Background="#FFB4EAFF">
        <ComboBox x:Name="cbPapeleria" HorizontalAlignment="Left" Margin="98,31,0,0" VerticalAlignment="Top" Width="205" SelectionChanged="cbPapeleria_SelectionChanged">
            <ComboBox.Background>
                <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                    <GradientStop Color="#FFF0F0F0" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </ComboBox.Background>

            <ComboBoxItem>Libros</ComboBoxItem>
            <ComboBoxItem>Cuadernos</ComboBoxItem>
            <ComboBoxItem>Revistas</ComboBoxItem>
            <ComboBoxItem>Cuentos</ComboBoxItem>
            <ComboBoxItem>Periodicos</ComboBoxItem>
            <ComboBoxItem>Agendas</ComboBoxItem>

        </ComboBox>

        <Button x:Name="btnAgregar" Content="Agregar" HorizontalAlignment="Left" Margin="373,28,0,0" VerticalAlignment="Top" Width="91" Click="BtnAgregar" Background="White" Height="24"/>
        <Label Content="Articulo: " HorizontalAlignment="Left" Margin="29,28,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Grid x:Name="grdArticulos" HorizontalAlignment="Left" Height="476" Margin="29,70,0,0" VerticalAlignment="Top" Width="852">

        </Grid>
    </Grid>
</Window>